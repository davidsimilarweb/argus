<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
      <key>Label</key>
      <string>com.argus.caddy</string>
      <key>ProgramArguments</key>
      <array>
          <string>/opt/homebrew/bin/caddy</string>
          <string>run</string>
          <string>--config</string>
          <string>/Users/$(whoami)/argus/Caddyfile</string>
      </array>
      <key>RunAtLoad</key>
      <true/>
      <key>KeepAlive</key>
      <true/>
      <key>StandardErrorPath</key>
      <string>/Users/$(whoami)/argus/caddy-error.log</string>
      <key>StandardOutPath</key>
      <string>/Users/$(whoami)/argus/caddy-output.log</string>
      <key>WorkingDirectory</key>
      <string>/Users/$(whoami)/argus</string>
  </dict>
</plist>
